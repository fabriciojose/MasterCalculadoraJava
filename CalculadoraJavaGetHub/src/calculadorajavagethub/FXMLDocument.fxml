<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="calculadorajavagethub.FXMLDocumentController" 
          xmlns:fx="http://javafx.com/fxml" 
          alignment="CENTER" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    
<TextField fx:id="exit2" GridPane.columnIndex="0" GridPane.rowIndex="0" 
    GridPane.columnSpan="4"/>
<TextField fx:id="exit1" GridPane.columnIndex="0" GridPane.rowIndex="1"
    GridPane.columnSpan="4"/>

<Button text=" 0 " GridPane.columnIndex="0" GridPane.rowIndex="7" prefHeight="45" prefWidth="45" onAction="#btn0" />
<Button text=" . " GridPane.columnIndex="1" GridPane.rowIndex="7" prefHeight="45" prefWidth="45" onAction="#bntDot"/>
<Button text=" = " GridPane.columnIndex="2" GridPane.rowIndex="7" prefHeight="45" prefWidth="45" onAction="#btnEqual"/>
<Button text=" + " GridPane.columnIndex="3" GridPane.rowIndex="7" prefHeight="45" prefWidth="45" onAction="#btnSum"/>

<Button text=" 1 " GridPane.columnIndex="0" GridPane.rowIndex="6" prefHeight="45" prefWidth="45" onAction="#btn1"/>
<Button text=" 2 " GridPane.columnIndex="1" GridPane.rowIndex="6" prefHeight="45" prefWidth="45" onAction="#btn2"/>
<Button text=" 3 " GridPane.columnIndex="2" GridPane.rowIndex="6" prefHeight="45" prefWidth="45" onAction="#btn3"/>
<Button text=" - " GridPane.columnIndex="3" GridPane.rowIndex="6" prefHeight="45" prefWidth="45" onAction="#btnSub"/>


<Button text=" 4 " GridPane.columnIndex="0" GridPane.rowIndex="5" prefHeight="45" prefWidth="45" onAction="#btn4"/>
<Button text=" 5 " GridPane.columnIndex="1" GridPane.rowIndex="5" prefHeight="45" prefWidth="45" onAction="#btn5"/>
<Button text=" 6 " GridPane.columnIndex="2" GridPane.rowIndex="5" prefHeight="45" prefWidth="45" onAction="#btn6"/>
<Button text=" x " GridPane.columnIndex="3" GridPane.rowIndex="5" prefHeight="45" prefWidth="45" onAction="#btnMult"/>

<Button text=" 7 " GridPane.columnIndex="0" GridPane.rowIndex="4" prefHeight="45" prefWidth="45" onAction="#btn7"/>
<Button text=" 8 " GridPane.columnIndex="1" GridPane.rowIndex="4" prefHeight="45" prefWidth="45" onAction="#btn8"/>
<Button text=" 9 " GridPane.columnIndex="2" GridPane.rowIndex="4" prefHeight="45" prefWidth="45" onAction="#btn9"/>
<Button text=" ÷ " GridPane.columnIndex="3" GridPane.rowIndex="4" prefHeight="45" prefWidth="45" onAction="#btnDiv"/>

<Button text=" C " GridPane.columnIndex="0" GridPane.rowIndex="3"   prefHeight="45" prefWidth="45" onAction="#btnC"/>
<Button text=" +/- " GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="45" prefWidth="45"/>
<Button text=" % " GridPane.columnIndex="2" GridPane.rowIndex="3"   prefHeight="45" prefWidth="45"/>
<Button text="DEL" GridPane.columnIndex="3" GridPane.rowIndex="3"   prefHeight="45" prefWidth="45"/>

<!-- Mais uma atualização -->
<gridLinesVisible>false</gridLinesVisible>

</GridPane>
